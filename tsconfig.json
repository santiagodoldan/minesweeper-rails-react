{
  "awesomeTypescriptLoaderOptions": {
    "errorsAsWarnings": true
  },
  "compilerOptions": {
    "declaration": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strictNullChecks": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "jsx": "react"
  },
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "vendor",
    "public"
  ],
  "compileOnSave": false
}
